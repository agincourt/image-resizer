http {

    server {
        listen 80;
        server_name <%= domain %> www.<%= domain %>;
        root <%= deploy_to %>/current;
        passenger_enabled on;
        
        error_page 404 <%= deploy_to %>/current/public/404.html
        error_page 422 <%= deploy_to %>/current/public/422.html
        error_page 500 <%= deploy_to %>/current/public/500.html
        
        if ($host ~* ^www\.(.*)) {
            set $host_without_www $1;
            rewrite ^(.*)$ http://$host_without_www$1 permanent;
        }
    }

}