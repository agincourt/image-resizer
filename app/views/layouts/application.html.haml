= raw '<!DOCTYPE html>'
%html{ :lang => 'en' }
  %head
    %meta{ 'http-equiv' => 'content-type', :content => 'text/html;charset=UTF-8' }
    %meta{ 'http-equiv' => 'X-UA-Compatible', :content => 'chrome=1' }
    
    %title Image Editor
    
    = javascript_include_tag 'jquery-1.4.1.min', 'jquery.jcrop.min', 'extensions', 'application', :cache => 'base_app'
    = stylesheet_link_tag 'jquery.jcrop', 'base', :cache => 'base_app'
    
    /[if IE]
      = stylesheet_link_tag 'ie/all'

    /[if IE 6]
      = stylesheet_link_tag 'ie/ie6'
  %body
    :javascript
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-883686-21']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(ga);
      })();
      
    %noscript
      %p We're really sorry, but this application doesn't work without JavaScript enabled.
    
    #content= yield